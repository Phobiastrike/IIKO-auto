{
  "name": "iiko-auto",
  "version": "1.0.0",
  "description": "Утилита для извлечения OLAP-отчётов из системы IIKO",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --win portable --x64",
    "dist:mac": "electron-builder --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["iiko", "olap", "reports"],
  "author": "Phobiastrike",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "exceljs": "^4.4.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "productName": "IIKO Auto",
    "appId": "com.iiko.auto",
    "directories": {
      "output": "dist"
    },
    "files": ["**/*", "!dist", "!.github"],
    "asar": true,
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg", 
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    }
  }
}
