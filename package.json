{
  "name": "iiko-auto",
  "version": "1.0.0",
  "description": "IIKO Auto Utility",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --win portable --x64 --publish=never",
    "dist:mac": "electron-builder --mac --publish=never"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "exceljs": "^4.4.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "productName": "IIKO Auto",
    "appId": "com.iiko.auto",
    "directories": {
      "output": "dist"
    },
    "files": ["**/*", "!dist", "!.github"],
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    }
  }
}
